{
  "name": "LLM-Explainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/LLM-explainer",
  "remoteUser": "vscode",
  "containerEnv": {
    "UV_LINK_MODE": "copy",
    "UV_PYTHON": "3.14"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "postCreateCommand": "cp pyproject-container.toml pyproject.toml && uv sync --python 3.14",
  "postStartCommand": "uv sync --python 3.14"
}
